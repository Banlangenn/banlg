{
    "include": ["./lib/*.ts"],
    "exclude": ["node_modules", "dist", "./example/**/node_modules"],
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "lib": ["es2015"],
        "sourceMap": true,
        "pretty": true,
        "strictFunctionTypes": false,
        "importHelpers": true
    }
}